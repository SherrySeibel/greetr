<!DOCTYPE html>
<html>
  <head>
    <title>Greetr</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <section>
    <div>
      <% if signed_in? %>
        <p>You are currently signed in as <%= current_user.username %>. <%= link_to "Sign out?", session_path, method: :delete %></p>
      <% end %>
    </div>
    </section>

    <%= yield %>

  </body>
</html>
